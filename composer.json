{
    "name": "laratusk/larasvg",
    "description": "A modern Laravel package for SVG conversion with multiple provider support (Resvg, Inkscape, rsvg-convert). Convert SVG to PNG, PDF, EPS, and more.",
    "keywords": [
        "laravel",
        "svg",
        "converter",
        "resvg",
        "inkscape",
        "librsvg",
        "rsvg-convert",
        "png",
        "pdf",
        "vector"
    ],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/process": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^2.0|^3.0",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.5|^11.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Laratusk\\Larasvg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laratusk\\Larasvg\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laratusk\\Larasvg\\SvgConverterServiceProvider"
            ],
            "aliases": {
                "SvgConverter": "Laratusk\\Larasvg\\Facades\\SvgConverter"
            }
        }
    },
    "scripts": {
        "lint": "pint",
        "lint:test": "pint --test",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:feature": "phpunit --testsuite Feature",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": "phpunit --coverage-text",
        "analyse": "phpstan analyse --memory-limit=512M",
        "rector": "rector process",
        "rector:test": "rector --dry-run",
        "quality": [
            "@lint:test",
            "@rector:test",
            "@analyse",
            "@test"
        ]
    },
    "archive": {
        "exclude": [
            "try.php",
            "try-*.php",
            "tests/",
            "docs/",
            "art/",
            "bin/",
            ".github/"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}